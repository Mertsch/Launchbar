            <ScaleTransform x:Name="scaler" x:FieldModifier="private" ScaleX="1" ScaleY="1"/>
        </Canvas.LayoutTransform>
        <!--Base-->
        <Canvas>
            <Path StrokeLineJoin="Round" StrokeMiterLimit="4">
