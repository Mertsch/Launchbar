                    </LinearGradientBrush>
                </Path.Stroke>
            </Path>
        </Canvas>
        <!--Open-->
        <Canvas>
            <Canvas.Style>
                <Style TargetType="{x:Type Canvas}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=IsOpen}" Value="true">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
